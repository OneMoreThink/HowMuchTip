{
  "extends": "expo/tsconfig.base", // 이 부분은 그대로 유지합니다.
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],

      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/screens/*": ["./src/screens/*"],
      "@/types": ["./src/types/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}